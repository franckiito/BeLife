                    <Controls:Tile Margin="448,211,34,42" Height="Auto" Width="Auto" Title="Salir" TitleFontSize="16" Background="#FF833288">
                        <Image Source="Imagenes/Salir.png" Height="127" Width="127"></Image>
                    </Controls:Tile>
                    <Controls:Tile Margin="204,37,379,42" Height="Auto" Width="Auto" Title="Fotos" TitleFontSize="16" Background="#FF833288">
                        <Image Source="Imagenes/Camara.png" Height="127" Width="127"></Image>
                    </Controls:Tile>
                    <Controls:Tile Margin="448,37,34,209" Height="Auto" Width="Auto" Title="Videos" TitleFontSize="16" Background="#FF833288">
                        <Image Source="Imagenes/Video.png" Height="127" Width="127"></Image>
                    </Controls:Tile>
                </Grid>
            </Controls:MetroTabItem>
            <Controls:MetroTabItem Header="Contratos" Margin="-44,73,44,-73">
                <Grid>
                    <Controls:Tile Margin="458,200,77,51" Height="Auto" Width="Auto" Title="Salir" TitleFontSize="16" Background="#FF833288">
                        <Image Source="Imagenes/Salir.png" Height="127" Width="127"></Image>
                    </Controls:Tile>
                    <Controls:Tile Margin="209,26,364,51" Height="Auto" Width="Auto" Title="Hora" TitleFontSize="16" Background="#FF833288">
                        <Image Source="Imagenes/Reloj.png" Height="127" Width="127"></Image>
                    </Controls:Tile>
                    <Controls:Tile Margin="458,26,77,212" Height="Auto" Width="Auto" Title="Musica" TitleFontSize="16" Background="#FF833288">
                        <Image Source="Imagenes/Musica.png" Height="127" Width="127"></Image>
                    </Controls:Tile>
